<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bg3"
    tools:context=".LoginActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Login"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        android:layout_marginStart="15dp"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="412dp"
        android:layout_height="730dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="35dp">

        <LinearLayout
            android:layout_width="420dp"
            android:layout_height="730dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Selamat Datang Kembali!"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Halo Mate! masuk untuk melanjutkan aktivitas Anda dan nikmati pengalaman terbaik bersama Fundmate."
                android:textAlignment="textStart"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/login_username"
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_2"
                android:drawableLeft="@drawable/circle_user"
                android:textCursorDrawable="@drawable/text_cursor"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_medium"
                android:hint="Username"
                android:inputType="text"
                android:maxLines="1"
                android:padding="10dp"
                android:scrollHorizontally="true"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_colorv2"
                android:textSize="16dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >

                <!-- EditText untuk Password -->
                <EditText
                    android:id="@+id/login_password"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/border_2"
                    android:textCursorDrawable="@drawable/text_cursor"
                    android:drawableLeft="@drawable/lock"
                    android:drawablePadding="10dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:scrollHorizontally="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint_colorv2"
                    android:textSize="16sp" />

                <!-- ImageView untuk Mata (Eye) di sebelah kanan -->
                <ImageView
                    android:id="@+id/password_eye"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="33dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginBottom="10dp"
                    android:contentDescription="Eye"
                    android:src="@drawable/eye_crossed" />

            </RelativeLayout>

            <Button
                android:id="@+id/login_button"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginTop="50dp"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:background="@drawable/background_gradient"
                android:fontFamily="@font/poppins_medium"
                android:text="Login"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:backgroundTint="@null"
                android:layout_gravity="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/signupRedirectText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_medium"
                android:padding="8dp"
                android:text="Belum Punya Akun? Sign Up Sekarang!"
                android:textColor="@color/biru_sec"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>