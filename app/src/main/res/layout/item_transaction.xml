<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/border_4"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/list_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/border_5"
        android:padding="8dp"
        android:src="@drawable/basket"
        android:scaleType="centerInside"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/list_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shopping"
            android:textStyle="bold"
            android:textColor="#109010"/>

        <TextView
            android:id="@+id/list_tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="06 Apr 2025"
            android:textSize="12sp"
            android:textColor="#888888" />

    </LinearLayout>

    <TextView
        android:id="@+id/list_pengeluaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Rp.90.000"
        android:textStyle="bold"
        android:layout_marginEnd="10dp"
        android:textColor="#ff0000" />
</LinearLayout>
