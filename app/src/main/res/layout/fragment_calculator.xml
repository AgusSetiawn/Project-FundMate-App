<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="0dp"
    android:gravity="center"
    android:background="@color/white">

    <!-- Display for the calculator (occupy half the screen) -->
    <EditText
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:inputType="none"
        android:textSize="48sp"
        android:textColor="@color/biru_sec"
        android:layout_gravity="top"
        android:background="@drawable/border_6"
        android:focusable="false"
        android:cursorVisible="false"
        android:importantForAccessibility="yes"
        android:padding="16dp" />

    <!-- Buttons for calculator -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:orientation="vertical"
        android:padding="0dp"
        android:layout_marginBottom="70dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/border_7"> <!-- Added margin-bottom for space below the calculator -->

        <!-- First row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="fill_horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="5dp">

            <Button
                android:id="@+id/btnClear"
                android:layout_width="90dp"
                android:layout_height="68dp"
                android:text="AC"
                android:textColor="@color/biru_third"
                android:background="@drawable/border_6"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                app:backgroundTint="@color/white"/>

            <Button
                android:id="@+id/btnPlusMinus"
                android:layout_width="90dp"
                android:layout_height="68dp"
                android:text="+/-"
                android:textColor="@color/biru_third"
                android:background="@drawable/border_6"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"/>

            <Button
                android:id="@+id/btnPercent"
                android:layout_width="90dp"
                android:layout_height="68dp"
                android:text="%"
                android:textColor="@color/biru_third"
                android:textSize="24sp"
                android:textStyle="bold"
                android:background="@drawable/border_6"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"/>

            <Button
                android:id="@+id/btnDivide"
                android:layout_width="90dp"
                android:layout_height="68dp"
                android:text="รท"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:textStyle="bold"
                android:background="@drawable/border_6"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                app:backgroundTint="@color/biru_low"/>

        </LinearLayout>

        <!-- Second row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="fill_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <Button
                android:id="@+id/btn7"
                android:layout_width="90dp"
                android:layout_height="68dp"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:background="@drawable/border_6"
                android:layout_gravity="center"
                android:layout_marginStart="10dp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="90dp"
                android:layout_height="68dp"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:background="@drawable/border_6"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"/>

            <Button
                android:id="@+id/btn9"
                android:layout_width="90dp"
                android:layout_height="68dp"
                android:text="9"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:background="@drawable/border_6"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"/>

            <Button
                android:id="@+id/btnMultiply"
                android:layout_width="90dp"
                android:layout_height="68dp"
                android:text="ร"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:background="@drawable/border_6"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                app:backgroundTint="@color/biru_low"/>
        </LinearLayout>

        <!-- Third row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="fill_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <Button
                android:id="@+id/btn4"
                android:layout_width="90dp"
                android:layout_height="68dp"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:background="@drawable/border_6"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"/>

            <Button
                android:id="@+id/btn5"
                android:layout_width="90dp"
                android:layout_height="68dp"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:background="@drawable/border_6"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"/>

            <Button
                android:id="@+id/btn6"
                android:layout_width="90dp"
                android:layout_height="68dp"
                android:text="6"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:background="@drawable/border_6"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"/>

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="90dp"
                android:layout_height="68dp"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="35sp"
                android:background="@drawable/border_6"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                app:backgroundTint="@color/biru_low"/>
        </LinearLayout>

        <!-- Fourth row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="fill_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <Button
                android:id="@+id/btn1"
                android:layout_width="90dp"
                android:layout_height="68dp"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:background="@drawable/border_6"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"/>

            <Button
                android:id="@+id/btn2"
                android:layout_width="90dp"
                android:layout_height="68dp"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:background="@drawable/border_6"
                android:layout_gravity="center"
                android:layout_marginStart="5dp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="90dp"
                android:layout_height="68dp"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:background="@drawable/border_6"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"/>

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="90dp"
                android:layout_height="68dp"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:background="@drawable/border_6"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                app:backgroundTint="@color/biru_low"/>
        </LinearLayout>

        <!-- Fifth row (Last row) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="fill_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <Button
                android:id="@+id/btn0"
                android:layout_width="90dp"
                android:layout_height="68dp"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:background="@drawable/border_6"
                android:layout_gravity="center"
                android:layout_marginStart="10dp" />

            <Button
                android:id="@+id/btnDot"
                android:layout_width="90dp"
                android:layout_height="68dp"
                android:text="."
                android:textColor="@color/black"
                android:textSize="32sp"
                android:background="@drawable/border_6"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"/>

            <Button
                android:id="@+id/btnEquals"
                android:layout_width="190dp"
                android:layout_height="68dp"
                android:text="="
                android:textColor="@color/white"
                android:textSize="32sp"
                android:background="@drawable/border_6"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                app:backgroundTint="@color/biru_sec"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
