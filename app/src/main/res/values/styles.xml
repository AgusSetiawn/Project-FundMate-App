<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomButtonStyle">
        <item name="android:background">@drawable/background_gradient</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Common Style for Normal Buttons -->
    <style name="CalcButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="android:background">@color/dark_gray</item>
    </style>

    <!-- Common Style for Operator Buttons -->
    <style name="CalcOperatorButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="android:background">@color/blue</item>
    </style>
</resources>